@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Osebni podatki";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Vaš račun vsebuje osebne podatke, ki ste nam jih podali. Ta stran vam omogoča prenos ali izbris teh podatkov.</p>
        <p>
            <strong>Brisanje teh podatkov bo za vedno izbrisalo vaš račun.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Prenesi</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Izbriši</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}